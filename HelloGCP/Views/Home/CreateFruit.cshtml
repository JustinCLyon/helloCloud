@model helloGCP.Models.Fruit

@{
    ViewData["Title"] = "Create Fruit";
}

<h1>View</h1>

<h4>Fruit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
